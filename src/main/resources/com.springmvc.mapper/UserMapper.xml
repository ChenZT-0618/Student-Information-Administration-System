<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springmvc.dao.UserMapper">
    <!--resultMap和resultType不能同时使用-->
    <resultMap id="BaseResultMap" type="com.springmvc.entity.User">
        <id column="user_id" property="userId" jdbcType="VARCHAR"/>
        <result column="user_nickname" property="userNickname" jdbcType="VARCHAR"/>
        <result column="user_password" property="userPassword" jdbcType="VARCHAR"/>
        <result column="user_identity" property="userIdentity" jdbcType="VARCHAR"/>
        <result column="user_icon" property="userIcon" jdbcType="VARCHAR"/>
        <result column="user_email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="user_phone" property="userPhone" jdbcType="VARCHAR"/>
    </resultMap>

    <!--将常用的列抽取出来-->
    <sql id="Base_Column_List">
    user_id, user_nickname, user_password, user_identity,user_icon,user_email,user_phone
    </sql>


    <select id="findByIdAndPassword" resultType="java.lang.Integer">
        SELECT
        COUNT(*)
        FROM user t
        <where>
            <if test="userId!=null and userId!=''">
                and t.user_id=#{userId}
            </if>
            <if test="userPassword!=null and userPassword!=''">
                and t.user_password = #{userPassword}
            </if>
        </where>
    </select>
    <select id="findIfIdExist" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM user
        <where>
            <if test="userId!=null and userId!=''">
                user_id=#{userId}
            </if>
        </where>
    </select>
    <select id="findIfNicknameExist" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM user
        <where>
            <if test="userNickname!=null and userNickname!=''">
                user_nickname=#{userNickname}
            </if>
        </where>
    </select>
    <select id="findIfEmailExist" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM user
        <where>
            <if test="userEmail!=null and userEmail!=''">
                user_email=#{userEmail}
            </if>
        </where>
    </select>
    <select id="selectUserById" resultMap="BaseResultMap">
        SELECT * FROM user
        <where>
            <if test="userId!=null and userId!=''">
                user_id=#{userId}
            </if>
        </where>
    </select>
    <select id="selectUserByUserEmail" resultMap="BaseResultMap">
        SELECT * FROM user
        <where>
            <if test="userEmail!=null and userEmail!=''">
                user_email=#{userEmail}
            </if>
        </where>
    </select>

    <insert id="insertUserRegInfo" parameterType="com.springmvc.entity.User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                user_id,
            </if>
            <if test="userNickname != null">
                user_nickname,
            </if>
            <if test="userPassword != null">
                user_password,
            </if>
            <if test="userIdentity != null">
                user_identity,
            </if>
            <if test="userIcon != null">
                user_icon,
            </if>
            <if test="userEmail != null">
                user_email,
            </if>
            <if test="userPhone != null">
                user_phone,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId,jdbcType=VARCHAR},
            </if>
            <if test="userNickname != null">
                #{userNickname,jdbcType=VARCHAR},
            </if>
            <if test="userPassword != null">
                #{userPassword,jdbcType=VARCHAR},
            </if>
            <if test="userIdentity != null">
                #{userIdentity,jdbcType=VARCHAR},
            </if>
            <if test="userIcon != null">
                #{userIcon,jdbcType=VARCHAR},
            </if>
            <if test="userEmail != null">
                #{userEmail,jdbcType=VARCHAR},
            </if>
            <if test="userPhone != null">
                #{userPhone,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <update id="updateResetPasswordByEmail" parameterType="com.springmvc.entity.User">
        UPDATE user
        <set>
            user_password=#{userPassword,jdbcType=VARCHAR}
        </set>
        <where>
            user_email=#{userEmail}
        </where>
    </update>
    <update id="updateResetUserInfo" parameterType="com.springmvc.entity.User">
        update user
        <set>
            <if test="userId != null">
                user_id = #{userId,jdbcType=VARCHAR},
            </if>
            <if test="userNickname != null">
                user_nickname = #{userNickname,jdbcType=VARCHAR},
            </if>
            <if test="userIdentity != null">
                user_identity = #{userIdentity,jdbcType=VARCHAR},
            </if>
            <if test="userIcon != null">
                user_icon = #{userIcon,jdbcType=VARCHAR},
            </if>
            <if test="userPhone != null">
                user_phone = #{userPhone,jdbcType=VARCHAR},
            </if>
        </set>
        where user_id = #{userId,jdbcType=INTEGER}
    </update>
    <update id="updateResetPasswordByUserId" parameterType="com.springmvc.entity.User">
        UPDATE user
        <set>
            user_password=#{userPassword,jdbcType=VARCHAR}
        </set>
        <where>
            user_id=#{userId}
        </where>
    </update>
    <update id="updateResetEmailByEmail">
        UPDATE user
        <set>
            user_email=#{userNewEmail,jdbcType=VARCHAR}
        </set>
        <where>
            user_email=#{userOldEmail}
        </where>
    </update>

</mapper>